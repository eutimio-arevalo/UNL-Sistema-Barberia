<%- layout('./layouts/main.ejs') %>

    <div class="container mt-4">
        <form action="/admin/empleado" method="POST" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <h4>Registrar Empleado</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-control mt-2" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="apellido" placeholder="Apellido" class="form-control mt-2" required>
                            </div>
                            <div class="form-group">
                                <input type="Date" name="nacimiento" placeholder="Fecha de Nacimiento" class="form-control mt-2"
                                    min="1922-01-01" max="2010-12-31" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="cedula" minlength="10" maxlength="10" placeholder="Cedula"
                                    class="form-control mt-2" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="telefono" placeholder="Telefono Movil" class="form-control mt-2"
                                    required>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" placeholder="Email" class="form-control mt-2" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="password" placeholder="ContaseÃ±a" class="form-control mt-2" required>
                            </div>
    
    
                        </div>
                        <div class="col-6 text-center">
    
                            <img src="#" id="preview" width="250" height="290" class="rounded mx-auto d-block" alt="Preview">
                            <label for="formFile" class="form-label mt-4">Selecciona una imagen para servicio</label>
                            <input type="file" id="formFile" name="image" class="form-control">
                        </div>
                    </div>
    
                    <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block mt-4">Aceptar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="overflow-auto">
        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido</th>
                                <th scope="col">Cedula</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Usuario</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listaPersonas.forEach(function (empleado, i) { %>
                            <tr>
                                
                                <td><%= empleado.nombre %></td>
                                <td><%= empleado.apellido %></td>
                                <td><%= empleado.cedula %></td>
                                <td><%= empleado.telefono %></td>
                                <td><%= listaUsers[i].email %></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button>
                                </td>
                                
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>