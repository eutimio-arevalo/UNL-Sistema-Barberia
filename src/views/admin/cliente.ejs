<%- layout('./layouts/main.ejs') %>

    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card mt-4 text-center">
                <div class="card-header">
                    <h3>Cliente</h3>
                </div>
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre" class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" placeholder="Apellido" class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="Date" name="nacimiento" placeholder="Fecha de Nacimiento" class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="cedula" minlength="10" maxlength="10" placeholder="Cedula"
                                class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="tel" name="telefono"  placeholder="Telefono Movil" class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email" class="form-control mt-2" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="clave" placeholder="Contaseña" class="form-control mt-2" required> 
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-block mt-4">Aceptar</button>
                        </div>
                    
                    </form>
                </div>
            </div>
            
        </div>
    </div>
    <div class="overflow-auto">
        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
