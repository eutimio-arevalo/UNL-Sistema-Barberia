<%- layout('./layouts/main.ejs') %>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Editar Servicios</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <form action="/signin" method="POST">
                                    <div class="form-group">
                                        <input type="text" name="nombre" placeholder="Nombre" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="apellido" placeholder="Apellido" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="Date" name="nacimiento" placeholder="Fecha de Nacimiento" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="cedula" minlength="10" maxlength="10" placeholder="Cedula"
                                            class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="tel" name="telefono"  placeholder="Telefono Movil" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" name="email" placeholder="Email" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="clave" placeholder="ContaseÃ±a" class="form-control mt-2" required> 
                                    </div>
            
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-block mt-4">Aceptar</button>
                                    </div>
                                
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

    <div class="overflow-auto">
        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <table class="table table-sm text-center">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido</th>
                                <th scope="col">Cedula</th>
                                <th scope="col">Telefono</th>
                                <th scope="col">Usuario</th>
                                <th scope="col">Editar</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listaPersonas.forEach(function (empleado, i) { %>
                                <tr>
    
                                    <td>
                                        <%= empleado.nombre %>
                                    </td>
                                    <td>
                                        <%= empleado.apellido %>
                                    </td>
                                    <td>
                                        <%= empleado.cedula %>
                                    </td>
                                    <td>
                                        <%= empleado.telefono %>
                                    </td>
                                    <td>
                                        <%= listaUsers[i].email %>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-success" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal"><i class="fas fa-edit"></i>
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        <form action="/admin/servicio/eliminar" method="POST">

                                            <input type="hidden" value="<%= i %>" name="posicion">
                                            <button type="submit" class="btn btn-danger"><i
                                                    class="far fa-trash-alt"></i></button>
                                        </form>
                                    </td>
    
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>