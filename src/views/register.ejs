<%- layout('layouts/main.ejs') %>

<div class="row">
	<div class="col-md-4 offset-md-4">
		<div class="card mt-4 text-center">
			<div class="card-header">
				<h3>Registrar</h3>
			</div>
			<div class="card-body">
				<form action="/register" method="POST" autocomplete="off">
					<div class="form-group">
						<input type="text" name="nombre" placeholder="Nombre" class="form-control mt-2" required>
					</div>
					<div class="form-group">
						<input type="text" name="apellido" placeholder="Apellido" class="form-control mt-2" required>
					</div>
					<div class="form-group">
						<input type="text" onfocus="(this.type='date')" id="date" name="nacimiento" placeholder="Fecha de Nacimiento" class="form-control mt-2"  min="1922-01-01" max="2010-12-31" required>
					</div>
					<div class="form-group">
						<input type="text" name="cedula" minlength="10" maxlength="10" placeholder="Cédula"
							class="form-control mt-2" required>
							
						  
					</div>
					<div class="form-group">
						<input type="tel" name="telefono" minlength="10" maxlength="10" placeholder="Teléfono Móvil" class="form-control mt-2" required>
					</div>
					<div class="form-group">
						<input type="email" name="email" placeholder="Email" class="form-control mt-2" required>
					</div>
					<div class="form-group">
						<input type="text" name="password" placeholder="Contraseña" class="form-control mt-2" required> 
					</div>

					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary btn-block mt-4">Registrar</button>
					</div>
				
				</form>
			</div>
		</div>
	</div>
</div>