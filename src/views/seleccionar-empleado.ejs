<%- layout('layouts/main.ejs') %>

<form action="/reservar" method="POST">
    <div class="card mt-2">
        <div class="card-header">
            <h3>Selecciona un Empleado</h3>
        </div>
        <div class="card-body">
            <% for(var i=0; i<3; i++){ %>
                <div class="card mt-2">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-1">
                            <input type="radio" class="btn-check" name="btnradio" id="<%= 'radioS'+i %>"
                                autocomplete="off" checked="">
                            <label class="btn btn-outline-primary" for="<%= 'radioS'+i %>"></label>
                        </div>
                        <div class="col-2">
                            <img src="../public/images/perfil.jpg" width="100px" height="100px" alt="img">
                        </div>
                        <div class="col-3">
                            <h2>
                                <%= "Titulo" +i %>
                            </h2>
                        </div>
                        <div class="col-4">
                            <p class="justify-content-md-center">
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Unde, animi?
                            </p>
                        </div>
                        <div class="col-1">
                            <p>
                                <%= "$" +((i+1)*2) %>
                            </p>
                        </div>
                    </div>
                </div>

                <% } %>
        </div>
        <div class="card-header">
            <h3>Selecciona fecha de cita</h3>
        </div>
        <div class="card-body ">
            <div class="row justify-content-center align-items-center">
                <div class="col">
                    <label for="selFecha">Seleccionar Fecha</label>
                    <input class="form-control" type="date" id="selFecha" name="fecha" min="">
                </div>
                <div class="col">
                    <label for="selHora">Seleccionar Hora</label>
                    <input class="form-control" type="time" id="selHora" name="hora" min="09:00" max="18:00" step="3600">
                </div>

            </div>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="text-center">
            <button class="btn btn-primary profile-button mt-4" type="submit">Reservar</button>
        </div>
</form>
