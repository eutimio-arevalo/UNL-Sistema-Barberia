        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if(!user){ %>
            <li class="nav-item">
              <a class="nav-link" href="../login">Iniciar Sesi√≥n</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="../register">Registrarse</a>
            </li>
            <% }else if(user && user.tipo=="Cliente" ){ %>
              <li class="nav-item">
                <a class="nav-link" href="../perfil">Perfil</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="../reservar">Reservar</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="../personalizar">Reserva Personalizada</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="../logout">Salir</a>
              </li>
              <% }else if(user && user.tipo=="Empleado" ){ %>
                <li class="nav-item">
                  <a class="nav-link" href="../perfil">Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../logout">Salir</a>
                </li>
                <% }else{%>
                <li class="nav-item">
                  <a class="nav-link" href="../perfil">Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../admin/cliente">Clientes</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../admin/empleado">Empleados</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../admin/servicio">Servicios</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../admin/cita">Citas</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="../logout">Salir</a>
                </li>
                <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if (mensajeLogear.length> 0){ %>
      <div class="alert alert-danger">
        <%= mensajeLogear %>
      </div>
      <% } %>
        <% if (mensajeRegistrar.length> 0){ %>
          <div class="alert alert-danger">
            <%= mensajeRegistrar %>
          </div>
          <% } %>

            <%- body %>
  </div>

